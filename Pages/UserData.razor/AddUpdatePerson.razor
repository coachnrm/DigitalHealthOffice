@page "/person/add"
@page "/person/edit/{userId:int}"
@using DemoSimpleBlazorUserAndRoleManager.Services
@inject IPersonService personService
@attribute [Authorize(Roles = "Administrators, Doctors, Nurses, Pharmacists, Users, Managers")]
<PageTitle>กรอกข้อมูลเพิ่มเติม</PageTitle>
<h3>กรอกข้อมูลเพิ่มเติม</h3>
<AuthorizeView Roles="Administrators">
    <Authorized>
        <span>
            <a href="/persons" class="btn btn-outline-dark">Show All</a>
        </span>
    </Authorized>
</AuthorizeView>

<div class="row">
    <div class="col-md-6">
       <EditForm Model="@person" OnValidSubmit="Save">
           <DataAnnotationsValidator/>

           <div class="form-group">
              <label for="Name">ชื่อ</label>
             <InputText class="form-control" @bind-Value="person.FirstName"/>
             <ValidationMessage For="@(()=>person.FirstName)"/>
           </div>

            <div class="form-group">
              <label for="Name">นามสกุล</label>
             <InputText class="form-control" @bind-Value="person.LastName"/>
             <ValidationMessage For="@(()=>person.LastName)"/>
           </div>
            
            <div class="form-group">
                <label for="Email">Email</label>
                <InputText class="form-control" @bind-Value="person.Email" />
                <ValidationMessage For="@(()=>person.Email)" />
            </div>

            <div class="form-group">
              <label for="Name">อาชีพ</label>
             <InputText class="form-control" @bind-Value="person.Occupation"/>
             <ValidationMessage For="@(()=>person.Occupation)"/>
           </div>

            <div class="form-group">
              <label for="Name">ข้อเสนอแนะ(ถ้ามี)</label>
             <InputText class="form-control" @bind-Value="person.Suggestion"/>
             <ValidationMessage For="@(()=>person.Suggestion)"/>
           </div>
            <div class="my-2">
                @message
            </div>

            <div class="my-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
       </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int UserId { get; set; }
    private string message = string.Empty;
    Models.Person person = new();
    private string Title = "Add Person";

    private void Save()
    {
        message = "wait...";
        if (personService.AddUpdate(person))
        {
            message = "Sucessfully added";
            person = new();
        }
        else
        {
            message = "Could not saved";
        }
    }

    protected override void OnInitialized()
    {
        if (UserId > 0)
        {
            Title = "Upage Person";
            person = personService.FindById(UserId);
        }
        base.OnInitialized();
    }
}